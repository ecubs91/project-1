extends layout

block content
  script(type='text/javascript' src='https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js')
  script(type='text/javascript' src='https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js')    
  .container
    .row(style='margin-top:50px; margin-bottom:180px;')
      .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
        form#myform(role='form', method='POST', action='register')
          .text-center
            img.img-square(src='../images/group.png', alt='Cinque Terre', width='100', height='100')
          .text-center
            img.img-square(src='../images/register.png', alt='Cinque Terre', width='167', height='37')
          hr.colorgraph
          .form-group
            input#email.form-control.input-lg(type='userName', name='email', placeholder='Email')
          .form-group
            input#username.form-control.input-lg(type='userName', name='username', placeholder='Username to display')
          .form-group
            input#password.form-control.input-lg(type='password', name='password', placeholder='Password')
          .form-group
            input#password_again.form-control.input-lg(type='password', name='password_again', placeholder='Please re-enter your password')
          .row
            .col-xs-6.col-sm-6.col-md-6(style='width:100%')
              button#registerbtn.btn.btn-info.btn-block.btn-lg(type='submit', value='Register') Register
          script.
            $( "#myform" ).validate({
            rules: {
            password: "required",
            password_again: {
            equalTo: "#password"
            }
            }
            });
          style.
            #password_again-error{
            font-weight: 500;
            padding-top: 10px;
            color: #ef2525;
            }
            #password-error{
            font-weight: 500;
            padding-top: 10px;
            color: #0c0202;
            }
          div
            p
            #errormsg.text-danger(style='display:none;')
              | Password do not match. Please re-enter password.
            if message
              #exists.text-danger
                | User with this email already exists. Please register with a different email. 