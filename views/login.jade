extends layout

block content
  .container
    .row(style='margin-top:20px; margin-bottom:50px;')
      .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
        form(role='form', method='POST', action='login')
          .text-center
            img.img-square(src='../images/group.png', alt='Cinque Terre', width='100', height='100')
          hr.colorgraph
          .form-group
            input#email.form-control.input-lg(type='userName', name='email', placeholder='email')
          .form-group
            input#password.form-control.input-lg(type='password', name='password', placeholder='Password')
          .row
            .col-xs-6.col-sm-6.col-md-6(style='width:100%')
              button.btn.btn-info.btn-block.btn-lg(type='submit', value='Register') Log In
          div
            style.
              #errormsg {
              display: none;
              };
            if message
              p
              .text-danger
                | Username or password is invalid. Please try again. 
